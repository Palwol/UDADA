import java.util.*;

public class Parenthesis {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Stack<String> stack = new Stack<String>();
		
		String ps;
		int c;
		
		int n = sc.nextInt();
		sc.nextLine();
		for(int i=0; i<n; i++) {
			ps = sc.nextLine();
			c = 1;
			for(int j=0; j<ps.length(); j++) {
				if(ps.charAt(j) == '(')
					stack.push("(");
				if(ps.charAt(j) == ')') {
					if(stack.isEmpty()) {
						c = 0;
						break;
					}
					else
						stack.pop();
				}	
			}
			if(c == 0) {
				System.out.println("NO");
			}
			if(c == 1) {
				System.out.println("YES");
			}

		}

	}

}
